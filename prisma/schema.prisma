datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String           @id @map("_id") @default(auto()) @db.ObjectId
  name            String?
  email           String           @unique
  emailVerified   DateTime?
  image           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  investorProfile InvestorProfile? // ✅ just reference, no @relation needed here
}

model InvestorProfile {
  id               String   @id @map("_id") @default(auto()) @db.ObjectId
  userId           String   @unique @db.ObjectId
  user             User     @relation(fields: [userId], references: [id]) // ✅ foreign key owner
  sectors          String[]
  stages           String[]
  checkSizeMin     Float
  checkSizeMax     Float
  geographies      String[]
  keywords         String[]
  excludedKeywords String[]
}

model Email {
  id           String   @id @unique
  from         String
  fromEmail    String
  subject      String
  content      String
  timestamp    DateTime
  isRead       Boolean  @default(false)
  isStarred    Boolean  @default(false)
  status       String   @default("new")
  relevanceScore Int    @default(0)
  
  // Cached analysis
  sector       String?
  predictionMethod String? // 'keywords', 'gemini', 'fallback'
  summary      String?
  competitiveAnalysis Json? // Store as JSON array
  marketResearch String?
  fundingMentioned Boolean @default(false)
  growthStage  String? // 'Early', 'Expansion', 'Mature'
  
  // Attachments (stored as JSON)
  attachments  Json?
  
  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastFetched  DateTime @default(now())

  @@map("emails")
}



